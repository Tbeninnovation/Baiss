<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Increase HTTP request timeout to 600 seconds (10 minutes) for large/slow downloads -->
  <config>
    <add key="httpRequestTimeout" value="600" />
  </config>
  
  <packageSources>
    <clear />
    <!-- NuGet.org official source - contains all public packages -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  
  <!-- Disable any HTTP caching for fresh downloads -->
  <disabledPackageSources />
</configuration>
